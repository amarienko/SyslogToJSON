{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Syslog",
    "description": "JSON Syslog",
    "type": "object",
    "items": {
        "properties": {
            "message": {
                "description": "Full Syslog message",
                "type": "string"
            },
            "id": {
                "description": "The unique syslog message identifier",
                "type": "integer"
            },
            "creationTimestamp": {
                "description": "Time of adding an entry to the JSON log file",
                "type": "string"
            },
            "data": {
                "description": "Detailed information about the event in the syslog",
                "type": "object",
                "properties": {
                    "month": { "type": "string", "pattern": "^[a-zA-Z]{3}" },
                    "day": { "type": "string", "pattern": "^[0-9]{2}" },
                    "year": { "type": "string", "minLength": 0, "pattern": "^[0-9]*" },
                    "time": { "type": "string", "pattern": "^[0-9]{2}:[0-9]{2}:[0-9]{2}$" },
                    "hostname": { "type": "string", "maxLength": 255 },
                    "service": {
                        "type": "array",
                        "properties":
                             {
                            "process": { "type": "string" },
                             "pid":
                                {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "minLength": 0
                                        },
                                        {
                                            "type": "integer",
                                            "minLength": 0
                                        }
                                    ]
                                }
                            },
                        "uniqueItems": true,
                        "additionalProperties": false,
                        "required": [ "process" ]
                    },
                    "msg": { "type": "string" }
                },
                "items": {
                    "anyOf": [
                        { "type": "array" },
                        { "type": "string" },
                        { "type": "number" }
                    ]
                },
                "uniqueItems": true,
                "additionalProperties": false,
                "required": [ "month", "day", "time", "hostname", "service", "msg" ]
            }
        },
        "minItems": 3,
        "additionalProperties": false,
        "required": ["message", "id", "data"]
    }
}
